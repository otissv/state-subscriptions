{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "dev": "run-p react:dev store:dev",
    "watch": "run-p react:watch store:watch",
    "test": "run-p react:test store:test",
    "test:watch": "run-p react:test:watch store:test:watch",
    "react:watch": "cd packages/react && npm run watch",
    "react:test": "cd packages/react && npm run test",
    "react:test:watch": "cd packages/react && npm run test:watch",
    "store:watch": "cd packages/react && npm run watch",
    "store:test": "cd packages/react && npm run test",
    "store:test:watch": "cd packages/react && npm run test:watch"
  }
}
